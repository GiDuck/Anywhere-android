<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.anywhere.any_20_2_supplier_reservation_manager_detail.ReservationManagerDetail">
    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/menubar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ScrollView
        android:id="@id/container1"
        android:layout_below="@id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--예약자 명-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약자명"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/reservationName"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약자명"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@color/cpb_grey"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--예약자 연락처-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약자 연락처"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/reservationPhone"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약자 연락처"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@color/cpb_grey"
                />


            <!--예약 일정-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약일정"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/reservationDate"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@color/cpb_grey"
                />
            <!--예약 인원 수-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 인원수"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/reservationPeopleNum"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@color/cpb_grey"
                />
            <!--요청사항-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청사항"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/reservationRequest"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청사항"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@color/cpb_grey"
                />

            <!--예약 메뉴-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메뉴"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reservationMenu"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />



            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@color/cpb_grey"
                />
            <!--예약 메뉴 갯수 및 가격-->
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 선택 갯수:"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/reservationMenuNum"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50명"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격:"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/reservationMenuPrice"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <info.hoang8f.widget.FButton
                android:id="@+id/reservationCheck"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textStyle="bold"
                android:textSize="20dp"
                app:cornerRadius="0dp"
                app:shadowEnabled="false"
                android:textColor="#ffffff"
                />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
