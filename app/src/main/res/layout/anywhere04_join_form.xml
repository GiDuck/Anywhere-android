<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="org.androidtown.anywhere.any_04_join.JoinForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="회원가입"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="닉네임"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/inputJoinNickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:backgroundTint="@color/colorAnywhereBlue"

                    android:textCursorDrawable="@null"
                    android:hint="한글2글자 혹은 영문4글자 이상"
                    android:textSize="15dp"
                    android:imeOptions="flagNoExtractUi"
                    />

                <info.hoang8f.widget.FButton
                    android:id="@+id/BtnAuthNickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="중복확인"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/box"
                    android:backgroundTint="@color/colorAnywhereBlue"
                    app:cornerRadius="0dp"
                    app:shadowEnabled="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="이메일"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <EditText
                    android:id="@+id/inputJoinEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:backgroundTint="@color/colorAnywhereBlue"

                    android:imeOptions="flagNoExtractUi"
                    android:textSize="15dp" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/BtnAuthEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="중복확인"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/box"
                    android:backgroundTint="@color/colorAnywhereBlue"
                    app:cornerRadius="0dp"
                    app:shadowEnabled="false" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="비밀번호"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputJoinPw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:hint="영문자,숫자 혼합 4~16자리"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/colorAnywhereBlue"

                    android:textSize="15dp"
                    android:imeOptions="flagNoExtractUi"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPwRecheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="비밀번호 확인"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputPwRecheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="비밀번호 재입력"
                    android:inputType="textPassword"
                    android:textSize="15dp"
                    android:backgroundTint="@color/colorAnywhereBlue"
                    android:imeOptions="flagNoExtractUi"
                    />

            </LinearLayout>

            <info.hoang8f.widget.FButton
                android:id="@+id/joinSubmitBtn"
                android:background="@drawable/box"
                android:backgroundTint="@color/colorAnywhereBlue"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:text="가입하기"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="0dp"

                app:shadowEnabled="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>