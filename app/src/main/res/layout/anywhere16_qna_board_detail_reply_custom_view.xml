<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/board_detail_reply_custom_Frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/qnaBoard_reply_Info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/ic_subdirectory_arrow_right_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글쓴이 :"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/qnaBoard_reply_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" user's ID "
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:text="작성 날짜: "
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/qnaBoard_reply_date"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-07-27 18:16"
                        android:textSize="15sp" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="0.5dp">

                            <EditText
                                android:id="@+id/qnaBoard_reply_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:clickable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="top"
                                android:padding="8dp"
                                android:imeOptions="flagNoExtractUi"

                                android:textSize="15sp" />

                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/inflateReplyController"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_expand_more_black_24dp"
                                android:backgroundTint="@color/black_de"

                                />

                        </LinearLayout>

                        <LinearLayout

                            android:id="@+id/replyControlLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:orientation="horizontal"

                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/qnaBoard_reply_controller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <info.hoang8f.widget.FButton
                                    android:id="@+id/qnaBoard_reply_modfiy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="수정"
                                    android:textSize="12sp"

                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    app:cornerRadius="0dp"
                                    app:shadowEnabled="false" />

                                <info.hoang8f.widget.FButton
                                    android:id="@+id/qnaBoard_reply_delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="8dp"
                                    android:text="삭제"
                                    android:textSize="12sp"

                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    app:cornerRadius="0dp"
                                    app:shadowEnabled="false" />

                            </LinearLayout>

                            <info.hoang8f.widget.FButton
                                android:id="@+id/qnaBoard_reply_append"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:text="댓글쓰기"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="12sp"

                                app:cornerRadius="0dp"
                                app:shadowEnabled="false" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:id="@+id/qnaBoard_reply_append_controll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="댓글 쓰기"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/qnaBoard_reply_append_edit"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/card_shadow"
                        android:gravity="top"
                        android:padding="8dp"
                        android:imeOptions="flagNoExtractUi"

                        android:scrollbars="vertical"
                        android:textSize="15sp" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/qnaBoard_reply_append_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:text="댓글쓰기"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:cornerRadius="0dp"
                        app:shadowEnabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qnaBoard_reply_modfiy_controll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="댓글 쓰기"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/qnaBoard_reply_modfiy_edit"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/card_shadow"
                        android:gravity="top"
                        android:padding="8dp"
                        android:imeOptions="flagNoExtractUi"

                        android:scrollbars="vertical"
                        android:textSize="15sp" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/qnaBoard_reply_modfiy_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:text="댓글 수정"

                        android:textColor="@color/colorWhite"
                        app:cornerRadius="0dp"
                        app:shadowEnabled="false" />

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>